@page "/trainers"
@using EasyTalk.Shared.Models
@using EasyTalk.Shared.Services
@inject APIServices Api
@inject ICameraService CameraService

<div class="dashboard-container">
    <aside class="sidebar">
        <h2 class="logo">EasyTalk Admin</h2>
        <nav>
            <ul>
                <li><a class="active" href="/trainers">Trainers</a></li>
                <li><a href="/courses">Courses</a></li>
            </ul>
        </nav>
    </aside>

    <main class="main-content">
        <header class="page-header">
            <h3>Trainer Management</h3>
            <div class="search-bar">
                <input class="form-control" placeholder="Search trainer..."
                       @bind="searchTerm" @bind:event="oninput" />
                <button class="btn btn-primary" @onclick="LoadData">Search</button>
            </div>
        </header>

        <!-- Trainer Table -->
        <section class="card">
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Expertise</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in trainers)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(t.ProfileImageUrl))
                                {
                                    <img src="@t.ProfileImageUrl"
                                         style="width:50px;height:50px;border-radius:50%;object-fit:cover;" />
                                }
                                else
                                {

                                    <span>No photo</span>
                                }
                            </td>
                            <td>@t.Name</td>
                            <td>@t.Expertise</td>
                            <td>@t.Email</td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => Edit(t)">Edit</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => Delete(t.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

        <!-- Trainer Form -->
        <section class="card form-card p-3 mt-3">
            <h4>@(isNew ? "Add Trainer" : "Edit Trainer")</h4>

            <EditForm Model="trainer" OnValidSubmit="Save">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <InputText @bind-Value="trainer.Name" class="form-control mb-2" placeholder="Name" />
                <ValidationMessage For="@(() => trainer.Name)" />

                <InputText @bind-Value="trainer.Expertise" class="form-control mb-2" placeholder="Expertise" />
                <ValidationMessage For="@(() => trainer.Expertise)" />

                <InputText @bind-Value="trainer.Email" class="form-control mb-2" placeholder="Email" />
                <ValidationMessage For="@(() => trainer.Email)" />

                <!-- CAMERA BUTTON -->
                <button type="button" class="btn btn-secondary mb-2" @onclick="TakeTrainerPhoto">
                    📷 Take Photo
                </button>

                <!-- FILE UPLOAD -->
                <InputFile OnChange="OnTrainerFileSelected" accept="image/*" class="form-control mb-2" />

                <!-- PREVIEW -->
                @if (!string.IsNullOrEmpty(trainer.ProfileImageUrl))
                {
                    <img src="@trainer.ProfileImageUrl"
                         style="width:150px; border-radius:8px; margin-bottom:10px;" />
                }

                <button type="submit" class="btn btn-success">
                    @((isNew) ? "Add" : "Update")
                </button>
            </EditForm>
        </section>

    </main>
</div>

@code {
    private List<Trainer> trainers = new();
    private Trainer trainer = new();
    private bool isNew = true;
    private string searchTerm = "";

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        try
        {
            var url = string.IsNullOrEmpty(searchTerm)
                ? "api/trainer"
                : $"api/trainer?search={searchTerm}";
            trainers = await Api.GetAllAsync<Trainer>(url);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[LoadData ERROR] {ex.Message}");
        }
    }

    private void Edit(Trainer t)
    {
        trainer = new Trainer
        {
            Id = t.Id,
            Name = t.Name,
            Expertise = t.Expertise,
            Email = t.Email,
            ProfileImageUrl = t.ProfileImageUrl   // penting!
        };
        isNew = false;
    }

    private async Task Save()
    {
        bool success;

        if (isNew)
            success = await Api.SaveAsync("api/trainer", trainer, true);
        else
            success = await Api.UpdateAsync("api/trainer", trainer.Id, trainer);

        if (success)
        {
            trainer = new();
            isNew = true;
            await LoadData();
        }
    }

    private async Task Delete(int id)
    {
        if (await Api.DeleteAsync($"api/trainer/{id}"))
            await LoadData();
    }

    private async Task OnTrainerFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        var url = await Api.UploadImageAsync(file);
        if (url != null)
            trainer.ProfileImageUrl = url;
    }

    private async Task TakeTrainerPhoto()
    {
        var captured = await CameraService.CapturePhotoAsync();
        if (captured == null) return;

        var wrapper = new StreamBrowserFile(
            captured.FileName,
            captured.ContentType,
            captured.Stream
        );

        var url = await Api.UploadImageAsync(wrapper);
        if (url != null)
            trainer.ProfileImageUrl = url;
    }

    // MAUI wrapper
    public class StreamBrowserFile : IBrowserFile
    {
        public StreamBrowserFile(string name, string contentType, Stream stream)
        {
            Name = name;
            ContentType = contentType;
            _stream = stream;
            LastModified = DateTimeOffset.Now;
            Size = stream.Length;
        }

        private readonly Stream _stream;

        public string Name { get; }
        public DateTimeOffset LastModified { get; }
        public long Size { get; }
        public string ContentType { get; }

        public Stream OpenReadStream(long maxAllowedSize = 5120000, CancellationToken cancellationToken = default)
            => _stream;
    }
}
